<body>
    <div class="page-wrapper">
        <header class="header">
            @await Html.PartialAsync("_Header", Model)
        </header>
        <main class="main main-test">
            <div class="container checkout-container">
                <ul class="checkout-progress-bar d-flex justify-content-center flex-wrap">
                    <li>
                        <a href="@Url.Action("CartView","Cart",new {area="User"})">Shopping Cart</a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("CheckoutView","Cart",new {area="User"})">Checkout</a>
                    </li>
                </ul>
                <div class="checkout-discount">
                    <h4>
                        Have a coupon?
                        <button data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseOne" class="btn btn-link btn-toggle">ENTER YOUR CODE</button>
