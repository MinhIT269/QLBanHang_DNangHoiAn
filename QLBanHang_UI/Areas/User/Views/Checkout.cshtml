                    <div class="col-lg-7">
                        <ul class="checkout-steps">
                            <li>
                                <h2 class="step-title">Billing details</h2>

                                <form asp-area="User" asp-controller="Order" asp-action="CheckOut" id="checkout-form">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    First name
                                                    <abbr class="required" title="required">*</abbr>
                                                </label>
                                                <input name="FirstName" type="text" class="form-control" required />
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    Last name
                                                    <abbr class="required" title="required">*</abbr>
                                                </label>
                                                <input name="LastName" type="text" class="form-control" required />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group mb-1 pb-2">
                                        <label>
                                            Street address
                                            <abbr class="required" title="required">*</abbr>
                                        </label>
                                        <input name="Address" type="text" class="form-control" placeholder="House number and street name" required />
                                    </div>

                                    <div class="form-group">
                                        <label>
                                            Promotion Code
                                        </label>
                                        <input name="PromotionCode" type="text" class="form-control" placeholder="Please enter to apply for order" />
                                    </div>

                                    <div class="form-group">
                                        <label>Phone <abbr class="required" title="required">*</abbr></label>
                                        <input name="PhoneNumber" type="tel" class="form-control" required />
                                    </div>

                                    <div class="form-group">
                                        <label>
                                            Email address
                                            <abbr class="required" title="required">*</abbr>
                                        </label>
                                        <input type="Email" class="form-control" required />
                                    </div>

                                    <div class="form-group">
                                        <label class="order-comments">Order notes (optional)</label>
                                        <textarea class="form-control" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                    </div>
                                </form>
                            </li>
                        </ul>
                    </div>
                    <!-- End .col-lg-8 -->

                    <div class="col-lg-5">
                        <div class="order-summary">
                            <h3>YOUR ORDER</h3>

                            <table class="table table-mini-cart">
                                <thead>
                                    <tr>
                                        <th colspan="2">Product</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Carts!.Any())
                                    {
                                        @foreach (var item in Model.Carts!)
                                        {
                                            <tr>
                                                <td class="product-col">
                                                    <h3 class="product-title">
                                                        @item.Product!.Name x
                                                        <span class="product-qty">@item.Quantity</span>
                                                    </h3>
                                                </td>

                                                <td class="price-col">
                                                    <span>
                                                        @((item.Product.PromotionPrice ?? item.Product.Price) * item.Quantity)
                                                    </span>
                                                </td>

                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="cart-subtotal">
                                        <td>
                                            <h4>Subtotal</h4>
                                        </td>

                                        <td class="price-col">
                                            @if (Model.Carts!.Any())
                                            {
                                                <span id="totalPrice">@Model.Carts!.Sum(p => (p.Product!.PromotionPrice ?? p.Product.Price) * p.Quantity)</span>
                                            }

                                        </td>
                                    </tr>
                                    <tr class="order-shipping">
                                        <td class="text-left" colspan="2">
                                            <h4 class="m-b-sm">Shipping</h4>

                                            <div class="form-group form-group-custom-control">
                                                <div class="custom-control custom-radio d-flex">
                                                    <input type="radio" class="custom-control-input" name="radio" checked />
                                                    <label class="custom-control-label">Local Pickup</label>
                                                </div>
                                                <!-- End .custom-checkbox -->
